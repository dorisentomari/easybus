{
  "name": "easybus",
  "version": "0.1.5",
  "description": "js 工具库",
  "keywords": [
    "typescript",
    "常用函数"
  ],
  "scripts": {
    "dev:rollup": "cross-env NODE_ENV=development rollup --config rollup.config.js --watch",
    "dev:test:server": "nodemon ./server/app.js",
    "dev:test:report": "cd lcov-report && hs -o",
    "dev:docs:server": "cd docs && hs -o",
    "build:rollup": "cross-env NODE_ENV=production rollup --config rollup.config.js",
    "build:tsc": "tsc --declaration -p ./ -t es2015 --emitDeclarationOnly",
    "build:docs": "typedoc --options ./scripts/typedocs.js",
    "build:task": "node ./scripts/task.js",
    "build:eslint": "npm run eslint",
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "clean:jest-report": "rimraf lcov-report && rimraf clover.xml && rimraf coverage-final.json && rimraf lcov.info",
    "clean": "npm-run-all --parallel clean:**",
    "test": "jest",
    "eslint": "eslint --fix ./src/**/*.ts ./scripts/**.js ./server/**.js",
    "coverall": "cat ./lcov.info | coveralls",
    "action:pre-add": "npm-run-all --serial build:**",
    "action:pre-commit": "npm-run-all --serial build:**",
    "action:pre-push": "npm run test"
  },
  "husky": {
    "hooks": {
      "pre-add": "action:pre-add",
      "pre-commit": "git add .",
      "pre-push": "npm run action:pre-push"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/weizhiqimail/easybus.git"
  },
  "license": "MIT",
  "author": "weizhiqimail",
  "main": "dist/easybus.js",
  "module": "dist/easybus.es.js",
  "umd": "dist/easybus.umd.js",
  "types": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/axios": "^0.14.0",
    "@types/chance": "^1.1.0",
    "@types/color": "^3.0.1",
    "@types/color-convert": "^1.9.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.8",
    "@types/jsdom": "^16.2.5",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "chance": "^1.1.6",
    "collect.js": "^4.28.0",
    "color": "^3.1.2",
    "color-convert": "^2.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "detect-node": "^2.0.4",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-standard": "^4.0.2",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "is-browser": "^2.1.0",
    "jest": "^26.6.1",
    "js-doc": "^0.5.0",
    "jsdoc": "^3.6.6",
    "jsdom": "^16.4.0",
    "licia": "^1.23.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.31",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.28.0",
    "swagger-client": "^3.11.1",
    "ts-jest": "^26.1.4",
    "ts-loader": "^6.2.1",
    "tslib": "^2.0.3",
    "typescript": "3.9",
    "voca": "^1.4.0"
  }
}
